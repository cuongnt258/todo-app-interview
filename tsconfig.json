{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"jsx": "react-native",
		"noEmit": true,
		"isolatedModules": false,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@assets": [
				"./assets/"
			],
			"@assets/*": [
				"./assets/*"
			],
			"@components": [
				"./components"
			],
			"@components/*": [
				"./components/*"
			],
			"@constants": [
				"./constants"
			],
			"@constants/*": [
				"./constants/*"
			],
			"@context": [
				"./context"
			],
			"@context/*": [
				"./context/*"
			],
			"@hooks": [
				"./hooks"
			],
			"@hooks/*": [
				"./hooks/*"
			],
			"@navigation": [
				"./navigation"
			],
			"@navigation/*": [
				"./navigation/*"
			],
			"@screens": [
				"./screens"
			],
			"@screens/*": [
				"./screens/*"
			],
			"@services": [
				"./services"
			],
			"@services/*": [
				"./services/*"
			],
			"@store": [
				"./store"
			],
			"@store/*": [
				"./store/*"
			],
			"@types": [
				"./types"
			],
			"@types/*": [
				"./types/*"
			],
			"@utils": [
				"./utils"
			],
			"@utils/*": [
				"./utils/*"
			],
		},
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
	],
}